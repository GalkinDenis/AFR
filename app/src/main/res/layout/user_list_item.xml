<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:descendantFocusability="blocksDescendants"
    >
    <TextView
        android:id="@+id/divider"
        android:layout_width="333dp"
        android:layout_height="72dp"
        android:background="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        style="@style/Widget.OnUsersListHeader"
        android:id="@+id/first_name_head"
        app:layout_constraintStart_toStartOf="@+id/divider"
        app:layout_constraintBottom_toTopOf="@+id/mark"
        android:text="@string/first_name_head"
        />
    <TextView
        style="@style/Widget.DescribeOnUsersList"
        android:id="@+id/first_name"
        app:layout_constraintTop_toBottomOf="@+id/mark"
        app:layout_constraintStart_toStartOf="@+id/first_name_head"
        />

    <TextView
        style="@style/Widget.OnUsersListHeader"
        android:id="@+id/last_name_head"
        app:layout_constraintStart_toStartOf="@+id/mark"
        app:layout_constraintBottom_toTopOf="@+id/mark"
        android:text="@string/last_name_head"
        />
    <TextView
        style="@style/Widget.DescribeOnUsersList"
        android:id="@+id/last_name"
        app:layout_constraintTop_toBottomOf="@+id/mark"
        app:layout_constraintStart_toStartOf="@+id/last_name_head"
        />

    <TextView
        android:id="@+id/mark"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
